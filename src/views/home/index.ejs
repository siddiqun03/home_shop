<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/main.css" />
    <title>Document</title>
  </head>
  <body class="bg-primary">
    <%- include('../components/header') %>

    <main>
      <section class="container pt-5 pb-4 position-relative selects mt-1">
        <form action="" class="d-flex justify-content-between">
          <label class="w-25 me-2">
            <p class="text-light fw-bold">Company</p>
            <select
              name="company"
              class="c_y form-select form-select-sm fw-bold text-primary"
            >
              <option value="" selected>choose one...</option>
              <% all_companies.map(e=> {%>
              <option
                value="<%= e.company_id %>|<%= e.company_img%>|<%= e.company_name%>"
              >
                <%= e.company_name %>
              </option>
              <%}); %>
            </select>
          </label>
          <label class="w-25 me-2">
            <p class="text-light fw-bold">Complex</p>
            <select
              disabled
              name="complex"
              class="c_x form-select form-select-sm fw-bold text-primary"
            >
              <option value="" selected disabled>choose one...</option>
            </select>
          </label>
          <label class="w-25 me-2">
            <p class="text-light fw-bold">Room</p>
            <select
              name="room"
              class="r_m form-select form-select-sm fw-bold text-primary"
            >
              <option value="" selected disabled>choose one...</option>
            </select>
          </label>
          <label class="w-25">
            <p class="text-light fw-bold">Mortgage Duration</p>
            <select
              name="mortgage"
              class="m_e form-select form-select-sm fw-bold text-primary"
            >
              <option value="" selected disabled>choose one...</option>
            </select>
          </label>
        </form>
      </section>

      <section class="container">
        <div class="rounded-3 body_uy mt-1"></div>
      </section>
    </main>

    <div>
      <svg
        class="waves"
        xmlns="http://www.w3.org/2000/svg"
        xmlns:xlink="http://www.w3.org/1999/xlink"
        viewBox="0 24 150 28"
        preserveAspectRatio="none"
        shape-rendering="auto"
      >
        <defs>
          <path
            id="gentle-wave"
            d="M-160 44c30 0 58-18 88-18s 58 18 88 18 58-18 88-18 58 18 88 18 v44h-352z"
          />
        </defs>
        <g class="parallax">
          <use
            xlink:href="#gentle-wave"
            x="48"
            y="0"
            fill="rgba(255,255,255,0.7"
          />
          <use
            xlink:href="#gentle-wave"
            x="48"
            y="3"
            fill="rgba(255,255,255,0.5)"
          />
          <use
            xlink:href="#gentle-wave"
            x="48"
            y="5"
            fill="rgba(255,255,255,0.3)"
          />
          <use xlink:href="#gentle-wave" x="48" y="7" fill="#fff" />
        </g>
      </svg>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <script src="/js/index.js"></script>
  </body>
</html>
